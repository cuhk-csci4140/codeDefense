{% extends "game/layout.twig" %} {% block title %} Game Main {% endblock
    %} {% block body %}
    <div id="loader" class="loader"></div>
    <div class="game-ui">
        <div class="game-ui-v">
            <div id="game-canvas-container" class="canvas-container">
                <canvas id="game-canvas" class="canvas-board"></canvas>
            </div>
            <div id="codepanel" class="codepanel">



                <div style="height:50%;">
                    <textarea  cols="60" id="txtcodepanel" placeholder="Command me to kill all monsters!"></textarea>
                </div>
                <a id="game-cast-trigger" class="cast-button" href="#">
                    Cast spells!!!
                </a>
            </div>
        </div>
        <div class="game-ui-h">
            <div class="instructionPanel" id="instructionPanel">
                <div class="instPanTitle">Basic commands</div>
                <div class="basiccmd">
                    Movements<br>
                    this.move(x,y);<br><br>
                    Magic<br>
                    this.cast(new spells.Fireball());<br>
                    this.cast(new spells.Pyroblast());<br>
                    this.cast(new spells.Thunderbolt(x,y)); *Relative position, +/- 2<br>
                    this.cast(new spells.Teleport(x,y)); *Absolute position<br>
                    
                    <br>
                    <br>
                    Challenge yourself: 
                    <a href="javascript:game.setLevel('test');">Test Level</a>

                </div>

                <a href="#" onclick="showBox('You have killed all monsters!', 'You Win!!');
                        return false;">MsgBox Demo: showBox(title,msg)</a>

            </div>
            <div class="gameInfoPanel" id="gameInfoPanel">
                <div class="instPanTitle">Game Status</div>
                <div class="basiccmd">
                    Stage <label id="stage">1</label> Round <label id="round">1</label><br>
                    HP <progress id="hp" style="position:absolute;left:35px;top:57px" max="100" min="0" value="10">
                            <div pseudo="-webkit-progress-inner-element">
                                <div pseudo="-webkit-progress-bar" style="background-color: white">
                                    <div pseudo="-webkit-progress-value" style="background-color: #7e7"></div>
                                </div>
                            </div>
                        </progress><br>
                        MP <progress id="mp" style="position:absolute;left:35px;top:73px" max="100" min="0" value="60">
                            <div pseudo="-webkit-progress-inner-element">
                                <div pseudo="-webkit-progress-bar" style="background-color: white">
                                    <div pseudo="-webkit-progress-value" style="background-color: #69d2e7"></div>
                                </div>
                            </div>
                            </progress><br>

                </div>


            </div>
        </div>

    {% endblock %}
