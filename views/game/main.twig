{% extends "game/layout.twig" %} {% block title %} Game Main {% endblock
    %} {% block body %}
    <div id="loader" class="loader"></div>
    <div class="game-ui">
        <div class="game-ui-v">
            <div id="game-canvas-container" class="canvas-container">
                <canvas id="game-canvas" class="canvas-board"></canvas>
            </div>
            <div id="codepanel" class="codepanel">



                <div style="60%">
                    <textarea  cols="1" id="txtcodepanel" placeholder="Command me to kill all monsters!"></textarea>
                </div>
                <a id="game-cast-trigger" class="cast-button" href="#">
                    Cast spells!!!
                </a>
            </div>
        </div>
        <div class="game-ui-h">
            <div class="instructionPanel" id="instructionPanel">
             <a id="stgSelection" class="stg_button" href="#"
            onclick="stgSec();">Stage Selection</a>
                <div style="height:50px"></div>
                <div class="instPanTitle">Basic commands</div>
                <div class="basiccmd">
                    <a href="#"><img class="skill_thum" src="/assets/gameobjects/bg/movement.png" onclick="info('movement')" ></img></a>
                    <a href="#"><img class="skill_thum" src="/assets/gameobjects/bg/fireball.png" onclick="info('fireball')"></img></a>
                    <a href="#"><img class="skill_thum" src="/assets/gameobjects/bg/firewall.png" onclick="info('firewall')"></img></a>
                    <a href="#"><img class="skill_thum" src="/assets/gameobjects/bg/pyroblast.png" onclick="info('pyroblast')"></img></a>
                    <!-- <a href="#"><img class="skill_thum" src="/assets/gameobjects/bg/meteor.png" onclick="info('meteor')"></img></a> -->
                    <a href="#"><img class="skill_thum" src="/assets/gameobjects/bg/icearrow.png" onclick="info('icearrow')"></img></a>
                    <a href="#"><img class="skill_thum" src="/assets/gameobjects/bg/lightwall.png" onclick="info('lightwall')"></img></a>
                    <a href="#"><img class="skill_thum" src="/assets/gameobjects/bg/thunderbolt.png" onclick="info('thunderbolt')"></img></a>
                    <a href="#"><img class="skill_thum" src="/assets/gameobjects/bg/teleport.png" onclick="info('teleport')"></img></a>
                   <!-- <a href=""><img class="skill_thum" src="/assets/gameobjects/bg/SLB.png" onclick="info('SLB')"></img></a> -->
                   
